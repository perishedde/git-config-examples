[core]
    excludesfile = /Users/<USERNAME>/.gitignore_global
    editor = vim
    whitespace = fix,-indent-with-non-tab,-trailing-space,-cr-at-eol
    autocrlf = input
    eol = lf
    filemode = false

[rerere]
    enabled = 1
    autoupdate = 1

[difftool "sourcetree"]
    cmd = opendiff \"$LOCAL\" \"$REMOTE\"
    path =


[user]
    name = Username
    email = mail@username.com

[color]
    ui = auto
    diff = auto
    status = auto
    branch = auto

[merge]
    ff = true
    tool = vimdiff

[filter "lfs"]
    clean = git lfs clean %f
    smudge = git lfs smudge %f
    required = true

[push]
    default = current

[alias]
    a = add --all
    co = commit
    d = diff
    st = status
    g = log --oneline --graph --color --all --decorate
    psuh = push
